@using ParcelDistributionCenter.Logic.ViewModels;
@model EmailViewModel


<style>
    body {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
        background-image: url('mail_background.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
    }

    .container {
        max-width: 450px;
        padding: 20px;
        background-color: #f2f2f2;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .header {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 10px;
        text-align: center;
    }

    .description {
        margin-bottom: 20px;
        text-align: center;
    }

    .form-group {
        margin-bottom: 10px;
        text-align: center;
        align-items: center;
        justify-content: center;
    }

    .input-label {
        display: block;
        margin-bottom: 5px;
        color: #333;
        text-align: center;
    }

    .form-control {
        width: 100%;
        padding: 6px;
        font-size: 14px;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .text-danger {
        color: #dc3545;
        font-size: 12px;
        margin-top: 5px;
        text-align: left;
    }

    .btn-primary {
        padding: 8px 16px;
        font-size: 14px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        display: block;
        margin: 0 auto;
    }

    .back-link {
        display: block;
        margin-top: 20px;
        color: #333;
        font-size: 14px;
        text-decoration: none;
        text-align: center;
    }
</style>

<div class="container">
    <div class="header">
        Report Mailing
    </div>
    <div class="description">
        Here you can find a Report Mailing, which will send the data for Packages Report to the Admin mail.<br>
        (email: leif.hyatt@ethereal.email)
    </div>
    <div class="description">
        Below you can indicate the time at which the data will be sent each day (from 0 to 23).
    </div>
    <form asp-action="ReportMailingConfirmed">
        <div class="form-group">
            <label class="input-label" for="HourToSendEmail">Cyclical hour of report sending: </label>
            <input asp-for="HourToSendEmail" class="form-control" id="HourToSendEmail" type="number" min="0" max="23" />
            <span asp-validation-for="HourToSendEmail" class="text-danger" />
        </div>
        <div class="form-group" >
            <input type="submit" value="Send Email" class="btn btn-primary" />
        </div>
        <div>
            <a asp-controller="Home" asp-action="Index" class="back-link">Back to Home</a>
        </div>
    </form>
</div>
