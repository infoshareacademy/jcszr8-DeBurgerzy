<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - ParcelDistributionCenter</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <style>
        .navbar {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            height: 56px;
            padding: 0 16px;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1030;
        }

        .navbar-brand {
            margin-right: auto;
        }
    </style>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand-lg navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" asp-controller="Home" asp-action="Index">QuickPost</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Toggler -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Navbar -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <partial name="_LoginPartial" />
                </li>
            </ul>
        </div>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">

                        @*PACKAGES*@
                        <div class="sb-sidenav-menu-heading">Manage Package</div>
                        <a class="nav-link" asp-controller="Packages" asp-action="DisplayPackages">
                            <div class="sb-nav-link-icon"><i class="fas fa-edit"></i></div>
                            Packages List
                        </a>
                        <a class="nav-link" asp-controller="Packages" asp-action="AddPackage">
                            <div class="sb-nav-link-icon"><i class="fas fa-cube"></i></div>
                            Send Package
                        </a>
                        <a class="nav-link" asp-controller="Packages" asp-action="UnassignedPackages">
                            <div class="sb-nav-link-icon"><i class="fas fa-dolly"></i></div>
                            Unassigned Packages
                        </a>

                        @if (User.IsInRole("Admin"))
                        {
                            @*COURIERS*@
                            <div class="sb-sidenav-menu-heading">Manage Couriers</div>
                            <a class="nav-link" asp-controller="Couriers" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-dolly"></i></div>
                                Couriers List
                            </a>

                            @*DELIVERY MACHINES*@
                            <div class="sb-sidenav-menu-heading">Manage Delivery Machines</div>
                            <a class="nav-link" asp-controller="DeliveryMachines" asp-action="Details">
                                <div class="sb-nav-link-icon"><i class="fas fa-warehouse"></i></div>
                                Delivery Machines List
                            </a>

                            @*REPORTS*@
                            <div class="sb-sidenav-menu-heading">Reports</div>
                            <a class="nav-link" asp-controller="Reports" asp-action="ReportMailing">
                                <div class="sb-nav-link-icon"><i class="fas fa-envelope"></i></div>
                                Report Mailing
                            </a>
                            <a class="nav-link" asp-controller="Reports" asp-action="GetPackagesReport">
                                <div class="sb-nav-link-icon"><i class="fas fa-chart-pie"></i></div>
                                Packages Report
                            </a>
                        }
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                @if (TempData["Message"] != null)
                {
                    <div class="alert @TempData["MessageClass"]">
                        @TempData["Message"]
                    </div>
                }
                @RenderBody()
            </main>
            @if (ViewBag.HideFooter == null || !(bool)ViewBag.HideFooter)
            {
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; Deburgerzy 2023</div>
                        </div>
                    </div>
                </footer>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/assets/demo/chart-area-demo.js"></script>
    <script src="~/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="~/js/datatables-simple-demo.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
