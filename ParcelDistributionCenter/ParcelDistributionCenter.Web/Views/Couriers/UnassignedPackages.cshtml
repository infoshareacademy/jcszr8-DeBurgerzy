@model IEnumerable<ParcelDistributionCenter.Web.Models.AssignPackagesVM>

@{
    ViewData["Title"] = "UnassignedPackages";
}

<h1>Unassigned Packages</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackageNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecipientEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            @if(item.Name == "Unknown"){
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PackageNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Registered)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Size)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RecipientEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SenderEmail)
                    </td>
            <td>
                @Html.ActionLink("Assign", "Assign", new { packageNumber=item.PackageNumber, courierId=ViewContext.RouteData.Values["id"]})
            </td>
        </tr>
            }
}
    </tbody>
</table>
