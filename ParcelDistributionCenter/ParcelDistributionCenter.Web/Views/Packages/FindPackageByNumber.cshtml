
@model ParcelDistributionCenter.Web.ViewModels.PackageNumberViewModel;

@{
    ViewData["Title"] = "Find Package By Number";
}

<h1 class="text-center text-success" style="font-weight: bold; margin-top: 8px">Find Package</h1>
<hr />
    <div class="row align-items-center justify-content-center">
        <div class="col-md-3 align-self-center">
            <h2 class="text-center">Select Package Number</h2>
        </div>
    </div>
<form asp-action="FindPackageByNumber">
    <table class="table">
    <tr>
        <td>
            Pick Package Number:
        </td>
        <td>
            <div class="dropdown">
                    <select asp-for="@Model.PackageNumber" class="form-control">
                    <option value="">-- Select Package Number --</option>
                    @foreach (var number in Model.PackageNumbers)
                    {
                        <option value="@number">@number</option>
                    }
                </select>
            </div>
        </td>
    </tr>
</table>


<div class="text-center">

        <div class="form-group text-center">
            <input type="submit" value="Find Package" class="btn btn-primary" />
        </div>
</div>
</form>



