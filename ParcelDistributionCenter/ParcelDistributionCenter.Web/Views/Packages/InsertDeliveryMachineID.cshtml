@model ParcelDistributionCenter.Web.Models.DeliveryMachineID

@{
    ViewData["Title"] = "InsertDeliveryMachineID";
}

<h1>Find package by delivery machine ID</h1>

<h4>Insert Delivery Machine ID:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FindPackageByDeliveryMachineID">
