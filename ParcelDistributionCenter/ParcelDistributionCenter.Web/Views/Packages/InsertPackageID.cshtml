@model ParcelDistributionCenter.Web.Models.InsertNumberViewModel

@{
    ViewData["Title"] = "InsertPackageID";
}

<h1>Find package by package ID</h1>

<h4>Insert package ID:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FindPackageByPackageID">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">               
                <input asp-for="IdNumber" class="form-control" />
                <span asp-validation-for="IdNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Find" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>  
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
