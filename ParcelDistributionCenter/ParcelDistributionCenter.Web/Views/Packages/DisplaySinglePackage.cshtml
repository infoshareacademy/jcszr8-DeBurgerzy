@model ParcelDistributionCenter.Model.Models.Package

@{
    ViewData["Title"] = "Package added";
}

<h1 class="text-center text-success" style="font-weight: bold; margin-top: 8px">Package successfully added!</h1>

<h3 class="text-center">Package Number: @Model.PackageNumber</h3>
<div>
    <hr />
    @*TUTAJ DO POPRAWY TE POWTARZAJĄCE SIĘ DIVY I ICH WLAŚCIWOŚCI*@
    <dl class="row align-items-center justify-content-center text-center">
        <div class="form-group row align-items-center justify-content-center" style="margin: 8px;">
            <dt class="col-sm-3">
                <label asp-for="DeliveryAddress" class="control-label"></label>
            </dt>
            <dd class="col-sm-3">
                @Model.DeliveryAddress
            </dd>
        </div>
        <div class="form-group row align-items-center justify-content-center" style="margin: 8px;">
            <dt class="col-sm-3">
                <label asp-for="RecipientEmail" class="control-label"></label>
            </dt>
            <dd class="col-sm-3">
                @Model.RecipientEmail
            </dd>
        </div>
        <div class="form-group row align-items-center justify-content-center" style="margin: 8px;">
            <dt class="col-sm-3">
                <label asp-for="RecipientName" class="control-label"></label>
            </dt>
            <dd class="col-sm-3">
                @Model.RecipientName
            </dd>
        </div>
        <div class="form-group row align-items-center justify-content-center" style="margin: 8px;">
            <dt class="col-sm-3">
                <label asp-for="RecipientPhone" class="control-label"></label>
            </dt>
            <dd class="col-sm-3">
                @Model.RecipientPhone
            </dd>
        </div>
        <div class="form-group row align-items-center justify-content-center" style="margin: 8px;">
            <dt class="col-sm-3">
                <label asp-for="Registered" class="control-label"></label>
            </dt>
            <dd class="col-sm-3">
                @Model.Registered
            </dd>
        </div>
        <div class="form-group row align-items-center justify-content-center" style="margin: 8px;">
            <dt class="col-sm-3">
                <label asp-for="SenderAddress" class="control-label"></label>
            </dt>
            <dd class="col-sm-3">
                @Model.SenderAddress
            </dd>
        </div>
        <div class="form-group row align-items-center justify-content-center" style="margin: 8px;">
            <dt class="col-sm-3">
                <label asp-for="SenderEmail" class="control-label"></label>
            </dt>
            <dd class="col-sm-3">
                @Model.SenderEmail
            </dd>
        </div>
        <div class="form-group row align-items-center justify-content-center" style="margin: 8px;">
            <dt class="col-sm-3">
                <label asp-for="SenderName" class="control-label"></label>
            </dt>
            <dd class="col-sm-3">
                @Model.SenderName
            </dd>
        </div>
        <div class="form-group row align-items-center justify-content-center" style="margin: 8px;">
            <dt class="col-sm-3">
                <label asp-for="SenderPhone" class="control-label"></label>
            </dt>
            <dd class="col-sm-3">
                @Model.SenderPhone
            </dd>
        </div>
        <div class="form-group row align-items-center justify-content-center" style="margin: 8px;">
            <dt class="col-sm-3">
                <label asp-for="Size" class="control-label"></label>
            </dt>
            <dd class="col-sm-3">
                @Model.Size
            </dd>
        </div>
        <div class="form-group row align-items-center justify-content-center" style="margin: 8px;">
            <dt class="col-sm-3">
                <label asp-for="Status" class="control-label"></label>
            </dt>
            <dd class="col-sm-3">
                @Model.Status
            </dd>
        </div>
    </dl>

    <form asp-action="DisplaySinglePackage">
        <div class="text-center">
            <a asp-action="Edit" asp-route-id="@Model.PackageNumber" class="btn btn-primary">Edit</a>
            <a asp-action="DeletePackage" asp-route-packageNumber="@Model.PackageNumber" class="btn btn-danger" onclick="return confirmDelete();">Delete</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
        </div>
    </form>

    <script>
        function confirmDelete()
        {
            if (confirm("Are you sure you want to delete this package?"))
            {
                return true;
            }
            return false;
        }
    </script>
</div>
