@model IEnumerable<ParcelDistributionCenter.Model.Entites.Package>

@{
    ViewData["Title"] = "Unassigned Packages";
}

<h1 class="center-text" style="margin: 30px">Unassigned Packages</h1>

<table class="table center-table">
    <thead>
        <tr class="center-cell">
            <th>
                Courier
            </th>
            <th>
                Delivery Machine
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecipientEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="center-cell">
                <td>
                    @if (item.CourierId == null)
                    {
                        <a asp-action="AssignCourier" asp-route-packageNumber=@item.PackageNumber asp-route-courierId=@ViewContext.RouteData.Values["id"] class="btn btn-primary">Assign Courier</a>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem =>item.Courier.Email)
                    }
                </td>
                <td>
                    @if (item.DeliveryMachineId == null)
                    {
                        <a asp-action="AssignDeliveryMachine" asp-route-packageNumber=@item.PackageNumber asp-route-deliveryMachineId=@ViewContext.RouteData.Values["id"] class="btn btn-primary">Assign Delivery Machine</a>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem =>item.DeliveryMachine.Address)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecipientEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SenderEmail)
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .center-text {
        text-align: center;
    }

    .center-table {
        margin: 0 auto;
    }

    .center-cell {
        text-align: center;
        vertical-align: middle;
    }

    .font-weight-bold {
        font-weight: bold;
    }
</style>
