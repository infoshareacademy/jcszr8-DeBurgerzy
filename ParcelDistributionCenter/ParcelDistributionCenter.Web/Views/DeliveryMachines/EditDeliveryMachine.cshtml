@model ParcelDistributionCenter.Web.DTOs.DeliveryMachineDTO

@{
    ViewData["Title"] = "Edit Delivery Machine";
}

<h1>Edit Delivery Machine</h1>

<h4>Delivery Machine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDeliveryMachineConfirmed">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="BigLockersCount" class="control-label"></label>
                <input asp-for="BigLockersCount" class="form-control" />
                <span asp-validation-for="BigLockersCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MediumLockersCount" class="control-label"></label>
                <input asp-for="MediumLockersCount" class="form-control" />
                <span asp-validation-for="MediumLockersCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SmallLockersCount" class="control-label"></label>
                <input asp-for="SmallLockersCount" class="form-control" />
                <span asp-validation-for="SmallLockersCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
